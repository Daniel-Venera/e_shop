<!DOCTYPE html>
<html>
	<head>
		<title>EShop</title>
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>

		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
		<%= stylesheet_link_tag "bootstrap"%>
		<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

	</head>

	<body class="bg">
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary pb-0 mb-0">
			<a class="navbar-brand" href="<%= root_path %>">E-Kitty</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarColor01">
				<ul class="navbar-nav mr-auto">

					<% if user_signed_in? %>

						<li class="nav-item">
							<a class="nav-link" href="<%= user_path(current_user.id) %>">Mon profil</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="<%= destroy_user_session_path %>" data-method="delete">Se déconnecter</a>
						</li>
						<ul class="navbar-nav ml-auto nav-flex-icons">

						</ul>

					<% else %>

						<li class="nav-item">
							<a class="nav-link" href="<%= new_user_registration_path %>">S'Inscrire</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="<%= new_user_session_path %>">Se Connecter</a>
						</li>

					<% end %>

					<li class="nav-item">
						<a class="nav-link" href="/statics/contact">Contact</a>
					</li>

				<% if isAdmin? %>
					<li class="nav-item">
						<%= link_to 'Gestion Items', admin_items_path, class: 'nav-link' %>
					</li>
					<li class="nav-item">
						<%= link_to 'Gestion Commandes', admin_orders_path, class: 'nav-link' %>
					</li>
				<% end %>

				</ul>

				<% if user_signed_in? %>

					<ul class="navbar-nav ml-auto nav-flex-icons">
						<li class="nav-item mr-3 ">
							<a class="nav-link navabar-right text-white" href="<%= user_cart_path(current_user.id, current_user.cart.id) %>">Mon panier<img  class = "panier" src = "/assets/panier.png"></a>
						</li>
						<li class="nav-item avatar">
							<a class="nav-link p-0" href="#">
								<img src="https://anniversaire-celebrite.com/upload/250x333/mireille-mathieu-250.jpg" class="rounded-circle z-depth-0"
																																															alt="avatar image" height="50" width="50">
							</a>
						</li>
					</ul>

				<% end %>

			</div>
		</nav>

		<div class="container p-0 mt-0">
			<!-- Les Flash d'error -->
			<%= render 'layouts/messages' %>
			<br />
			<%= yield %>

		</div>

		<footer class=" footer page-footer font-small blue pt-4 bg-primary text-white sticky-bottom mt-5">
			<div class="container-fluid text-center text-md-left text-white">

				<div class="row">
					<div class="col-md-4 mt-md-0 mt-3">
						<h5 class="text-uppercase text-dark">E-Kitty</h5>
						<p>On a tant à partager !</p>
						<a class="text-white" href="/statics/contact">Contact</a>
					</div>
				</div>

				<div class="footer-copyright text-center py-3">© 2020 Copyright:
					<a href="https://mdbootstrap.com/" class = "text-white"> MDBootstrap.com</a>
				</div>
			</div>

		</footer>
	</body>
</html>
