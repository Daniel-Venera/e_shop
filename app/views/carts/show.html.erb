<h1 class="text-center"> Voici votre panier !</h1>
<br />
<br />
<br />
<div class="card-body">
  <% @cart.items.each do |item|%>
    <div class="row">
      <div class="col-12 col-sm-12 col-md-2 text-center">
        <img class="img-responsive" src="http://placehold.it/120x80" alt="prewiew" width="120" height="80">
      </div>
      <div class="col-12 text-sm-center col-sm-12 text-md-left col-md-6">
        <h4 class="product-name"><strong> <%= item.title %> </strong></h4>
        <small> <%= item.description %></small>
      </div>
      <div class="col-12 col-sm-12 text-sm-center col-md-4 text-md-right row">
        <div class="col-3 col-sm-3 col-md-6 text-md-right" style="padding-top: 5px">
          <h6><strong> Price : <%= item.price.to_i %> â‚¬</strong> </h6>
        </div>

        <div class="col-3 col-sm-2 col-md-2 text-right">
          <button type="button" class="btn btn-outline-danger">
            <h6><strong> Supprimer </strong></h6>
          </button>
        </div>
      </div>
    </div>
    <hr>
  <% end %>
  <br />
  <div class="pull-right">
		<%= link_to "Confirmer la Commande", user_cart_orders_path(current_user.id, current_user.cart.id), class: "btn btn-success pull-right", method: "post" %>

  </div>
</div>
