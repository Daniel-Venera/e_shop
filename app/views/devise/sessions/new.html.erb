<body class = "bg">
    <div class = "container col-md-5 card p-0 border shadow">
    <h2 class="text-center mb-4 card-header border bg-primary text-white ">Connexion</h2>
        <div class= "card-body mr-3 ml-3">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field">
                    <%= f.label :email, class: "mb-0" %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                </div> <br/>
                <div class="field">
                    <%= f.label :password, class: "mb-0"  %><br />
                    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
                </div>
                <% if devise_mapping.rememberable? %>
                    <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                    </div>
                <% end %>
                <div class="actions mb-3 text-center">
                    <%= f.submit "Log in", class: "form-control btn-secondary my-3" %>
                </div>
            <% end %>
            <div class="bg-light container-fluid border rounded mb-4">
                <center>
                    <small class="text-center">
                        <%= render "devise/shared/links" %>
                    </small>
                </center>
            </div>
        </div>
    </div>
    <br/>
</body>


